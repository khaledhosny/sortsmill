(use-modules (ice-9 getopt-long)
             (sortsmill-fontforge fontforge-main))

(define (main args)
  (let* ((option-spec '((version (single-char #\V) (value #f))
                        (help    (single-char #\h) (value #f))))
         (options (getopt-long args option-spec))
         (help-args (if (option-ref options 'help #f)
                        '("-help")
                        '()))
         (version-args (if (option-ref options 'version #f)
                           '("-version")
                           '()))
         (nonoption-args (option-ref options '() '()))
         (argv0 (list (car args)))
         (passed-args (append argv0 help-args version-args nonoption-args)))
    (write nonoption-args)
    (fontforge-main passed-args)))

(main (command-line))
