import sys
import traceback

try:

  import fontforge
  import sortsmillff.ffcompat
  sortsmillff.ffcompat.__windowing_ui (True)
  sortsmillff.ffcompat.__running_script (False)
  import psMat
  import ffContrib.excepthook
  import os

  user_config_dir = os.environ.get('XDG_CONFIG_HOME', os.path.join(os.path.expanduser("~"), '.config'))

  package_name = '@PACKAGE@'

  user_init_file = 'user_init.py'

  user_init = os.path.join(user_config_dir, package_name, user_init_file)

  if os.path.exists(user_init):
    try:
      execfile(user_init)
    except:
      tb = ''.join (traceback.format_exc ())
      msg = ''.join (traceback.format_exception_only (sys.exc_type, sys.exc_value))
      fontforge.logWarning (tb.replace('%', '%%'))
      fontforge.postError('Unhandled exception in user_init.py', msg.replace('%','%%'))

except:
  tb = ''.join (traceback.format_exc ())
  msg = ''.join (traceback.format_exception_only (sys.exc_type, sys.exc_value))
  fontforge.logWarning (tb.replace('%', '%%'))
  fontforge.postError('Unhandled exception in site_init.py', msg.replace('%','%%'))
